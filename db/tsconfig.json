{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist",
		"rootDir": ".",
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,
		"lib": ["ES2020"],
		"types": ["node"]
	},
	"include": ["./**/*.ts"],
	"exclude": ["node_modules", "dist", "backups"]
}
