{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "backend/dist",
		"rootDir": "backend/src"
	},
	"include": ["backend/src"],
	"exclude": ["node_modules", "dist"]
}
